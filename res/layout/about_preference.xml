<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/background"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="fill_vertical">
	
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="0dip"
		android:layout_weight="1"
		android:layout_gravity="top|center_horizontal"
		android:layout_marginTop="135dip">
	
		<TextView
			android:id="@+id/credit_title_1"
			
			android:textSize="13sp"
			android:textStyle="bold"
			
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			
			android:textColor="#FF60762F"
			
			android:shadowColor="#FFDDDDDD"
			android:shadowRadius="1"
			android:shadowDx="0"
			android:shadowDy="1"/>
			
		<TextView
			android:id="@+id/credit_subtitle_1"
			
			android:textSize="16sp"
			android:textStyle="bold"
			
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			
			android:textColor="#FF302A24"
						
			android:shadowColor="#FFDDDDDD"
			android:shadowRadius="1"
			android:shadowDx="0"
			android:shadowDy="1"/>
			
		<TextView
			android:id="@+id/credit_title_2"
			
			android:textSize="13sp"
			android:textStyle="bold"
			
			android:layout_marginTop="12dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			
			android:textColor="#FF60762F"
			
			android:shadowColor="#FFDDDDDD"
			android:shadowRadius="1"
			android:shadowDx="0"
			android:shadowDy="1"/>
						
		<TextView
			android:id="@+id/credit_subtitle_2"
			
			android:textSize="16sp"
			android:textStyle="bold"
			
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			
			android:textColor="#FF302A24"
			
			android:shadowColor="#FFDDDDDD"
			android:shadowRadius="1"
			android:shadowDx="0"
			android:shadowDy="1"/>
						
		<TextView
			android:id="@+id/credit_title_3"
			
			android:textSize="13sp"
			android:textStyle="bold"
			
			android:layout_marginTop="12dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			
			android:textColor="#FF60762F"
			
			android:shadowColor="#FFDDDDDD"
			android:shadowRadius="1"
			android:shadowDx="0"
			android:shadowDy="1"/>
						
		<TextView
			android:id="@+id/credit_subtitle_3"
			
			android:textSize="16sp"
			android:textStyle="bold"
			
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			
			android:textColor="#FF302A24"
			
			android:shadowColor="#FFDDDDDD"
			android:shadowRadius="1"
			android:shadowDx="0"
			android:shadowDy="1"/>
			
		<TextView
			android:id="@+id/credit_title_4"
			
			android:textSize="13sp"
			android:textStyle="bold"
			
			android:layout_marginTop="12dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			
			android:textColor="#FF60762F"
			
			android:shadowColor="#FFDDDDDD"
			android:shadowRadius="1"
			android:shadowDx="0"
			android:shadowDy="1"/>
			
		<TextView
			android:id="@+id/credit_subtitle_4"
			
			android:textSize="16sp"
			android:textStyle="bold"
			
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			
			android:textColor="#FF302A24"
						
			android:shadowColor="#FFDDDDDD"
			android:shadowRadius="1"
			android:shadowDx="0"
			android:shadowDy="1"/>
	</LinearLayout>	
	
			
	<LinearLayout
		android:orientation="vertical"
		android:layout_marginRight="8dip"
		android:layout_marginBottom="20dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|right"
		android:gravity="center">
		
		<ImageView
			android:id="@+id/my_web_link"
			android:src="@drawable/my_web_link"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="right"
			android:layout_marginTop="12dip"
			android:clickable="true"/>
			
		<LinearLayout
			android:orientation="horizontal"
			android:layout_marginTop="12dip"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:gravity="fill_horizontal"
			android:layout_marginLeft="8dip">
			
			<ImageView
				android:id="@+id/web_link_2"
				android:src="@drawable/web_link_2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="left"
				android:clickable="true"/>
	
			<ImageView
				android:id="@+id/web_link_3"
				android:src="@drawable/web_link_3"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_weight="1"
				android:scaleType="fitEnd"
				android:clickable="true"/>
		</LinearLayout>
	</LinearLayout>
		
	<LinearLayout
		android:orientation="vertical"
		android:layout_marginBottom="8dip"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:gravity="center">
		
		<TextView
			android:id="@+id/copyright_line_1"
			android:text="copyright_line_1"
			
			android:textSize="12sp"
			android:textStyle="bold"
			
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			
			android:textColor="#FFFFFFFF"
			
			android:shadowColor="#FF000000"
			android:shadowRadius="1"
			android:shadowDx="0"
			android:shadowDy="1"/>
		
		<TextView
			android:id="@+id/copyright_line_2"
			android:text="copyright_line_2"
			
			android:textSize="10sp"
			android:textStyle="bold"
			
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			
			android:textColor="#FFFFFFFF"
			
			android:shadowColor="#FF000000"
			android:shadowRadius="1"
			android:shadowDx="0"
			android:shadowDy="1"/>
			
		<TextView
			android:id="@+id/copyright_line_3"
			android:text="copyright_line_3"
			
			android:textSize="10sp"
			android:textStyle="bold"
			
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			
			android:textColor="#FFFFFFFF"
			
			android:shadowColor="#FF000000"
			android:shadowRadius="1"
			android:shadowDx="0"
			android:shadowDy="1"/>
			
	</LinearLayout>
		
</LinearLayout>